{
  "_comment": "=== ApplyCrypto Configuration Example ===",
  "_usage": "Copy this file to config.json and modify according to your project",

  "target_project": "/path/to/your/java/project",
  "source_file_types": [".java", ".xml"],
  "sql_wrapping_type": "mybatis",
  "framework_type": "SpringMVC",
  "ccs_prefix": null,
  "llm_provider": "watsonx_ai",
  "generate_type": "full_source",
  "access_tables": [
    {
      "table_name": "tb_employee",
      "columns": [
        { "name": "emp_nm", "new_column": false, "column_type": "name", "encryption_code": "P017" },
        { "name": "birth_dt", "new_column": false, "column_type": "dob", "encryption_code": "P018" },
        { "name": "jumin_no", "new_column": false, "column_type": "rrn", "encryption_code": "P019" }
      ]
    }
  ],

  "_comment_column_fields": "=== Column Field Options ===",
  "_column_fields": {
    "name": "Column name in database (required)",
    "new_column": "Whether this is a newly added encryption column (optional, default: false)",
    "column_type": "Type of sensitive data: 'name', 'dob', 'rrn', 'sex' (optional but recommended for non-standard column names)",
    "encryption_code": "Direct policy ID to use: 'P017' (name), 'P018' (dob), 'P019' (rrn) (optional, highest priority)"
  },
  "_column_type_mapping": {
    "name": "이름 필드 → P017",
    "dob": "생년월일 필드 → P018",
    "rrn": "주민등록번호 필드 → P019",
    "sex": "성별 필드 (별도 처리)"
  },

  "exclude_dirs": ["test", "generated", "src/test"],
  "exclude_files": [
    "*Test.java", "*_test.java", "*Test*.java",
    "log4j.xml", "ehcache.xml", "mybatis-config.xml", "spring-servlet.xml"
  ],

  "_comment_modification_types": "=== Modification Type Options ===",
  "_modification_types": [
    "ControllerOrService - Single-step LLM code generation",
    "ServiceImplOrBiz - Single-step for ServiceImpl/Biz layer",
    "TypeHandler - MyBatis TypeHandler approach",
    "TwoStep - Two-phase: Planning -> Execution",
    "ThreeStep - Three-phase: Query Analysis -> Planning -> Execution"
  ],

  "modification_type": "TwoStep",

  "_comment_twostep": "=== TwoStep Configuration ===",
  "_twostep_modes": {
    "full": "Run Planning + Execution (default)",
    "plan_only": "Run Planning only, save results for later execution",
    "execution_only": "Run Execution using previous planning results"
  },

  "two_step_config": {
    "planning_provider": "watsonx_ai",
    "planning_model": "ibm/granite-3-8b-instruct",
    "execution_provider": "watsonx_ai",
    "execution_model": "mistralai/codestral-2505",
    "execution_options": {
      "_comment": "Optional: Set mode and plan_timestamp",
      "_mode_options": ["full", "plan_only", "execution_only"],
      "mode": "full"
    }
  },

  "_twostep_plan_only_example": {
    "_description": "Planning only - results saved to .applycrypto/two_step_results/{timestamp}/",
    "two_step_config": {
      "planning_provider": "watsonx_ai",
      "planning_model": "ibm/granite-3-8b-instruct",
      "execution_provider": "watsonx_ai",
      "execution_model": "mistralai/codestral-2505",
      "execution_options": {
        "mode": "plan_only"
      }
    }
  },

  "_twostep_execution_only_example": {
    "_description": "Execution only - uses previous planning results",
    "two_step_config": {
      "planning_provider": "watsonx_ai",
      "planning_model": "ibm/granite-3-8b-instruct",
      "execution_provider": "watsonx_ai",
      "execution_model": "mistralai/codestral-2505",
      "execution_options": {
        "mode": "execution_only",
        "plan_timestamp": "20250123_143052"
      }
    }
  },

  "_comment_threestep": "=== ThreeStep Configuration ===",
  "_threestep_modes": {
    "full": "Run Query Analysis + Planning + Execution (default)",
    "plan_only": "Run Query Analysis + Planning only",
    "execution_only": "Run Execution using previous analysis/planning results"
  },

  "_threestep_config_example": {
    "_description": "ThreeStep full example",
    "modification_type": "ThreeStep",
    "three_step_config": {
      "analysis_provider": "watsonx_ai",
      "analysis_model": "ibm/granite-3-8b-instruct",
      "execution_provider": "watsonx_ai",
      "execution_model": "mistralai/codestral-2505",
      "execution_options": {
        "mode": "full"
      }
    }
  },

  "_threestep_plan_only_example": {
    "_description": "Query Analysis + Planning only - results saved to .applycrypto/three_step_results/{timestamp}/",
    "modification_type": "ThreeStep",
    "three_step_config": {
      "analysis_provider": "watsonx_ai",
      "analysis_model": "ibm/granite-3-8b-instruct",
      "execution_provider": "watsonx_ai",
      "execution_model": "mistralai/codestral-2505",
      "execution_options": {
        "mode": "plan_only"
      }
    }
  },

  "_threestep_execution_only_example": {
    "_description": "Execution only using previous results",
    "modification_type": "ThreeStep",
    "three_step_config": {
      "analysis_provider": "watsonx_ai",
      "analysis_model": "ibm/granite-3-8b-instruct",
      "execution_provider": "watsonx_ai",
      "execution_model": "mistralai/codestral-2505",
      "execution_options": {
        "mode": "execution_only",
        "plan_timestamp": "20250123_143052"
      }
    }
  },

  "_comment_providers": "=== LLM Provider Options ===",
  "_llm_providers": [
    "watsonx_ai - IBM WatsonX AI (cloud)",
    "watsonx_ai_on_prem - IBM WatsonX AI (on-premise)",
    "claude_ai - Anthropic Claude",
    "openai - OpenAI GPT",
    "mock - Mock provider for testing"
  ],

  "_comment_framework_types": "=== Framework Type Options ===",
  "_framework_types": [
    "SpringMVC", "AnyframeSarangOn", "AnyframeOld", "AnyframeEtc",
    "AnyframeCCS", "anyframe_ccs_batch",
    "SpringBatQrts", "AnyframeBatSarangOn", "AnyframeBatEtc"
  ],

  "_comment_ccs_prefix": "=== CCS Prefix Option (for AnyframeCCS projects only) ===",
  "_ccs_prefix_description": "CCS 프로젝트 타입을 지정합니다. ThreeStep 코드 생성 시 유틸리티 클래스 결정에 사용됩니다.",
  "_ccs_prefix_options": {
    "null": "미설정 - 기존 SliEncryptionUtil 직접 호출 패턴 사용",
    "BC": "BCCommUtil, BCMaskingUtil 사용",
    "CP": "CPCmpgnUtil, CPMaskingUtil 사용",
    "CR": "CRCommonUtil, CRMaskingUtil 사용"
  },
  "_ccs_prefix_patterns": {
    "single_encrypt": "{CommonUtil}.encrypt(!StringUtil.isEmptyTrimmed(...), SliEncryptionUtil.encrypt(...), SliEncryptionUtil.encrypt(' '))",
    "single_decrypt": "{CommonUtil}.getDefaultValue(!StringUtil.isEmptyTrimmed(...), SliEncryptionUtil.decrypt(...), SliEncryptionUtil.decrypt(' '))",
    "multi_decrypt": "{CommonUtil}.setListDecryptAndMask(list, targetEncr) + {MaskingUtil}.mask() for name fields"
  },

  "_comment_sql_wrapping_types": "=== SQL Wrapping Type Options ===",
  "_sql_wrapping_types": [
    "mybatis - Standard MyBatis XML mappers",
    "mybatis_ccs - CCS-specific MyBatis (ctl/svcimpl/dqm layers)",
    "ccs_batch - CCS Batch MyBatis (*BAT_SQL.xml)",
    "bnk_batch - BNK Batch MyBatis (*_SQL.xml)",
    "jdbc - Plain JDBC with PreparedStatement",
    "jpa - JPA/Hibernate"
  ],

  "_comment_ccs_example": "=== CCS Project ThreeStep Example ===",
  "_ccs_threestep_example": {
    "_description": "AnyframeCCS 프로젝트용 ThreeStep 설정 예시",
    "framework_type": "AnyframeCCS",
    "sql_wrapping_type": "mybatis_ccs",
    "ccs_prefix": "CR",
    "modification_type": "ThreeStep",
    "three_step_config": {
      "analysis_provider": "watsonx_ai",
      "analysis_model": "ibm/granite-3-8b-instruct",
      "execution_provider": "watsonx_ai",
      "execution_model": "mistralai/codestral-2505",
      "execution_options": {
        "mode": "full"
      }
    }
  }
}
